<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiCouaching.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:p="clr-namespace:MauiCouaching.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Initialization"
        ContentTemplate="{DataTemplate p:AppInitializationPage}"
        Route="AppInitializationPage" />

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate p:MainPage}"
        Route="MainPage" />-->

    <TabBar>
        <Tab Title="MainPage">
            <ShellContent ContentTemplate="{DataTemplate p:MainPage}" Route="MainPage"/>
        </Tab>
        <Tab Title="Data Page">
            <ShellContent ContentTemplate="{DataTemplate p:DataPage}" Route="DataPage"/>
        </Tab>
    </TabBar>

</Shell>
